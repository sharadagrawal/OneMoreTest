<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="FreeVehicleIndicatorPolygon" TargetType="Polygon">
        <Setter Property="Fill" Value="{StaticResource PrimaryForegroundColor}"/>
        <Setter Property="Stroke" Value="{StaticResource PrimaryForegroundColor}"/>
        <Setter Property="Points" Value="-15,0 0,0 0,15"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,5,9,0"/>
    </Style>

    <Style x:Key="OccupiedVehicleIndicatorPolygon" TargetType="Polygon" BasedOn="{StaticResource FreeVehicleIndicatorPolygon}">
        <Setter Property="Fill" Value="{StaticResource HighlightForegroundColor}"/>
        <Setter Property="Stroke" Value="{StaticResource HighlightForegroundColor}"/>
    </Style>
    
    <Style x:Key="BottomArrowPoligon" TargetType="Polygon">
        <Setter Property="Fill" Value="{StaticResource DefaultForegroundBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>
</ResourceDictionary>
